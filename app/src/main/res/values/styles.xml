<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- These are all the styles used inside the SDK UI,
    overriding these would change the styles of TextViews, Buttons, etc.
    Make sure that the names match.

    For example if we wanted to change the font of the texts,
    we can override the "fontFamily" item inside "FontFamilyRegular"/ "FontFamilyBold". -->
    <style name="FontFamilyRegular" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="FontFamilyBold" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_text_bold</item>
    </style>

    <style name="TextViewColorPrimary" parent="FontFamilyRegular">
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="TextViewColorSecondary" parent="FontFamilyRegular">
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/color_secondary</item>
    </style>

    <style name="TextViewColorPrimarySize14" parent="@style/TextViewColorPrimary">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextViewColorPrimarySize16" parent="@style/TextViewColorPrimary">
        <item name="android:textSize">@dimen/text_size_medium_big</item>
    </style>

    <style name="TextPrimaryLight14" parent="@style/TextViewColorPrimary">
        <item name="fontWeight">400</item>
    </style>

    <style name="TextSecondaryLight14" parent="@style/TextViewColorSecondarySize14">
        <item name="fontWeight">400</item>
    </style>

    <style name="TextPrimaryLight12" parent="@style/TextPrimaryLight14">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextViewColorSecondarySize14" parent="@style/TextViewColorSecondary">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextPrimarySingleLine14" parent="@style/TextViewColorPrimarySize14">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="TextPrimaryCentered14" parent="@style/TextViewColorPrimarySize14">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextBlue14" parent="@style/TextViewColorSecondarySize14">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextPrimaryCentered12" parent="@style/TextViewColorPrimary">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextPrimaryCenteredSingleLine14" parent="@style/TextPrimaryCentered14">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="TextPrimaryLightStartSingleLine14" parent="@style/TextPrimaryStartSingleLine14">
        <item name="fontWeight">400</item>
    </style>

    <style name="TextSecondaryCentered14" parent="@style/TextViewColorSecondarySize14">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextSecondaryCenteredSingleLine14" parent="@style/TextSecondaryCentered14">
        <item name="singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="TextPrimaryStartSingleLine14" parent="@style/TextPrimaryCenteredSingleLine14">
        <item name="android:gravity">start</item>
    </style>

    <style name="TextSecondaryCentered12" parent="@style/TextSecondaryCentered14">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextViewColorSecondarySize10" parent="@style/TextViewColorSecondary">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>

    <style name="TextViewColorPrimaryBold" parent="FontFamilyBold">
        <item name="fontWeight">700</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="TextViewColorPrimaryBoldSize16" parent="@style/TextViewColorPrimaryBold">
        <item name="android:textSize">@dimen/text_size_medium_big</item>
    </style>

    <style name="TextViewColorPrimaryBold20" parent="@style/TextViewColorPrimaryBold">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="ReaderInfoStatusTextView" parent="@style/TextSecondaryCentered12">
        <item name="android:textColor">@color/reader_status_label</item>
    </style>

    <style name="TitleTextView" parent="TextViewColorPrimaryBoldSize16">
        <item name="android:textColor">@color/title_label</item>
    </style>

    <style name="SubtitleTextView" parent="TextViewColorPrimarySize14">
        <item name="android:textColor">@color/subtitle_label</item>
    </style>

    <style name="SubtitleTextViewCentered" parent="SubtitleTextView">
        <item name="android:gravity">center</item>
    </style>

    <style name="EditTextInfoLabel" parent="TextPrimaryLightStartSingleLine14">
        <item name="android:textColor">@color/info_label</item>
    </style>

    <style name="HintsTipTextHighlight" parent="TextPrimaryCentered14">
        <item name="android:background">@drawable/bg_hints_tip</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingStart">@dimen/margin_xsmall</item>
        <item name="android:paddingEnd">@dimen/margin_xsmall</item>
        <item name="android:textColor">@color/highlighted_text</item>
    </style>

    <style name="HintsTipTextDefault" parent="TextPrimaryCentered14">
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Button.RoundedBlack" parent="FontFamilyRegular">
        <item name="android:background">@drawable/bg_button_filled</item>
        <item name="backgroundTintMode">src_in</item>
        <item name="android:backgroundTint">@color/button_black_background</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/filled_button_text</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.Button.RoundedTransparent" parent="FontFamilyRegular">
        <item name="android:background">@drawable/bg_button_transparent_with_border</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/bordered_button_text</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.Button.RoundedWhite" parent="ShapeAppearanceOverlay.Button.RoundedTransparent">
        <item name="android:background">@drawable/bg_button_white_with_border</item>
    </style>

    <style name="RoundedRedTextButton" parent="@style/ShapeAppearanceOverlay.Button.RoundedWhite">
        <item name="android:textColor">@color/warning</item>
        <item name="android:paddingStart">@dimen/margin_big_large</item>
        <item name="android:paddingEnd">@dimen/margin_big_large</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
    </style>

    <style name="RoundedRedOutlinedTextButton" parent="@style/RoundedRedTextButton">
        <item name="android:textColor">@color/remove_reader_text</item>
        <item name="android:background">@drawable/bg_button_red_outline</item>
        <item name="android:paddingStart">@dimen/margin_big_large</item>
        <item name="android:paddingEnd">@dimen/margin_big_large</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
    </style>

    <style name="ButtonCancel" parent="@style/ShapeAppearanceOverlay.Button.RoundedWhite">
        <item name="android:text">@string/cancel</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edit_text_stroke_color</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="ManualEntryTextInputLayout" parent="TextInputLayout">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
    </style>

    <style name="CustomSwitch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/switch_enabled</item>
        <item name="colorSwitchThumbNormal">@color/switch_disabled</item>
        <item name="android:colorForeground">@color/switch_disabled</item>
    </style>

    <style name="TipsRadioButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="buttonTint">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/color_secondary</item>
    </style>

    <!-- MISCELLANEOUS -->

    <style name="Separator" parent="">
        <item name="android:background">@color/gray</item>
    </style>

</resources>
